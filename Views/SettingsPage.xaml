<Page
    x:Class="UWPDemo.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPDemo.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Header -->
        <Grid Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Click="NavigateBack" VerticalAlignment="Center" Margin="0,0,16,0">
                <SymbolIcon Symbol="Back"/>
            </Button>
            <TextBlock Grid.Column="1" Text="Settings" 
                      Style="{StaticResource PageTitleTextBlockStyle}" 
                      VerticalAlignment="Center" Margin="0"/>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
            <StackPanel Margin="24" Spacing="32">

                <!-- Appearance Settings -->
                <StackPanel Spacing="16">
                    <TextBlock Text="Appearance" Style="{StaticResource SectionHeaderTextBlockStyle}"/>
                    
                    <StackPanel Spacing="12">
                        <StackPanel>
                            <TextBlock Text="Theme" Margin="0,0,0,4"/>
                            <ComboBox x:Name="ThemeComboBox" 
                                     Width="200" 
                                     HorizontalAlignment="Left"
                                     SelectedIndex="{x:Bind ViewModel.SelectedThemeIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="Light"/>
                                <ComboBoxItem Content="Dark"/>
                                <ComboBoxItem Content="System Default"/>
                            </ComboBox>
                        </StackPanel>

                        <CheckBox Content="Use accent color in title bar" 
                                 IsChecked="{x:Bind ViewModel.UseAccentColor, Mode=TwoWay}"/>
                        
                        <CheckBox Content="Show app icons in navigation" 
                                 IsChecked="{x:Bind ViewModel.ShowNavigationIcons, Mode=TwoWay}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Behavior Settings -->
                <StackPanel Spacing="16">
                    <TextBlock Text="Behavior" Style="{StaticResource SectionHeaderTextBlockStyle}"/>
                    
                    <StackPanel Spacing="12">
                        <CheckBox Content="Remember window size and position" 
                                 IsChecked="{x:Bind ViewModel.RememberWindowSettings, Mode=TwoWay}"/>
                        
                        <CheckBox Content="Show confirmation dialogs" 
                                 IsChecked="{x:Bind ViewModel.ShowConfirmationDialogs, Mode=TwoWay}"/>
                        
                        <CheckBox Content="Enable animations" 
                                 IsChecked="{x:Bind ViewModel.EnableAnimations, Mode=TwoWay}"/>
                        
                        <StackPanel>
                            <TextBlock Text="Animation speed" Margin="0,8,0,4"/>
                            <Slider Value="{x:Bind ViewModel.AnimationSpeed, Mode=TwoWay}" 
                                   Minimum="0.5" Maximum="2.0" 
                                   StepFrequency="0.1"
                                   Header="{x:Bind ViewModel.AnimationSpeedText, Mode=OneWay}"
                                   IsEnabled="{x:Bind ViewModel.EnableAnimations, Mode=OneWay}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Data Settings -->
                <StackPanel Spacing="16">
                    <TextBlock Text="Data & Storage" Style="{StaticResource SectionHeaderTextBlockStyle}"/>
                    
                    <StackPanel Spacing="12">
                        <CheckBox Content="Auto-save changes" 
                                 IsChecked="{x:Bind ViewModel.AutoSave, Mode=TwoWay}"/>
                        
                        <StackPanel>
                            <TextBlock Text="Cache size limit (MB)" Margin="0,0,0,4"/>
                            <NumberBox Value="{x:Bind ViewModel.CacheSizeLimit, Mode=TwoWay}" 
                                      Minimum="10" Maximum="1000" 
                                      Width="150" 
                                      HorizontalAlignment="Left"/>
                        </StackPanel>
                        
                        <Button Content="Clear Cache" 
                               Click="{x:Bind ViewModel.ClearCache}"
                               HorizontalAlignment="Left"/>
                    </StackPanel>
                </StackPanel>

                <!-- About Section -->
                <StackPanel Spacing="16">
                    <TextBlock Text="About" Style="{StaticResource SectionHeaderTextBlockStyle}"/>
                    
                    <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                           Padding="16" CornerRadius="8">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Column="0" 
                                       Background="{ThemeResource AccentFillColorDefaultBrush}" 
                                       Width="64" Height="64" 
                                       CornerRadius="8" 
                                       Margin="0,0,16,0">
                                    <FontIcon Glyph="&#xE91C;" 
                                             FontSize="32" 
                                             Foreground="White"/>
                                </Border>
                                
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="UWP Demo Application" 
                                              FontSize="18" 
                                              FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind ViewModel.AppVersion}" 
                                              Opacity="0.8"/>
                                    <TextBlock Text="Universal Windows Platform Demonstration" 
                                              Opacity="0.8"/>
                                </StackPanel>
                            </Grid>
                            
                            <TextBlock Text="This application demonstrates modern UWP development practices including MVVM architecture, data binding, responsive design, and Fluent Design principles." 
                                      TextWrapping="Wrap" 
                                      Margin="0,8,0,0"/>
                            
                            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,16,0,0">
                                <HyperlinkButton Content="GitHub Repository" Click="{x:Bind ViewModel.OpenRepository}"/>
                                <HyperlinkButton Content="Documentation" Click="{x:Bind ViewModel.OpenDocumentation}"/>
                                <HyperlinkButton Content="Report Issue" Click="{x:Bind ViewModel.ReportIssue}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- System Information -->
                <StackPanel Spacing="16">
                    <TextBlock Text="System Information" Style="{StaticResource SectionHeaderTextBlockStyle}"/>
                    
                    <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                           Padding="16" CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Spacing="8">
                                <StackPanel>
                                    <TextBlock Text="Operating System:" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind ViewModel.OperatingSystem, Mode=OneWay}"/>
                                </StackPanel>
                                
                                <StackPanel>
                                    <TextBlock Text="Architecture:" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind ViewModel.Architecture, Mode=OneWay}"/>
                                </StackPanel>
                                
                                <StackPanel>
                                    <TextBlock Text=".NET Version:" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind ViewModel.DotNetVersion, Mode=OneWay}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Spacing="8">
                                <StackPanel>
                                    <TextBlock Text="App Version:" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind ViewModel.AppVersion, Mode=OneWay}"/>
                                </StackPanel>
                                
                                <StackPanel>
                                    <TextBlock Text="Device Family:" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind ViewModel.DeviceFamily, Mode=OneWay}"/>
                                </StackPanel>
                                
                                <StackPanel>
                                    <TextBlock Text="WinUI Version:" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind ViewModel.WinUIVersion, Mode=OneWay}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Spacing="16">
                    <TextBlock Text="Actions" Style="{StaticResource SectionHeaderTextBlockStyle}"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Content="Reset to Defaults" 
                               Click="{x:Bind ViewModel.ResetToDefaults}"
                               Style="{ThemeResource AccentButtonStyle}"/>
                        <Button Content="Export Settings" 
                               Click="{x:Bind ViewModel.ExportSettings}"/>
                        <Button Content="Import Settings" 
                               Click="{x:Bind ViewModel.ImportSettings}"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>