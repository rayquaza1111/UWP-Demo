<Page
    x:Class="UWP_Demo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Demo"
    xmlns:views="using:UWP_Demo.Views"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- ?? NAVIGATION SYSTEM: Advanced NavigationView with multi-page support -->
    <!-- ?? Features: Auto-responsive, breadcrumb, search, custom header, footer items -->
    <!-- ?? Modern Design: Windows 11 styling with fluent design principles -->
    <!-- ? Performance: Efficient page loading with Frame navigation -->
    <muxc:NavigationView x:Name="MainNavigationView"
                         IsBackButtonVisible="Auto"
                         IsSettingsVisible="True"
                         SelectionChanged="NavigationView_SelectionChanged"
                         BackRequested="NavigationView_BackRequested"
                         PaneDisplayMode="Auto"
                         OpenPaneLength="256"
                         CompactModeThresholdWidth="640"
                         ExpandedModeThresholdWidth="1024">
        
        <!-- ?? NAVIGATION: Enhanced header with app branding and breadcrumb -->
        <muxc:NavigationView.Header>
            <Grid Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- ?? App Header with Title and Breadcrumb -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind CurrentPageTitle, Mode=OneWay}" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                    <TextBlock x:Name="BreadcrumbText"
                               Text="Home &gt; Customer Management"
                               FontSize="12"
                               Opacity="0.7"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
                
                <!-- ?? NAVIGATION: Quick actions in header -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Spacing="8">
                    <!-- Search functionality -->
                    <Button x:Name="SearchButton"
                            Click="SearchButton_Click"
                            Style="{ThemeResource DefaultButtonStyle}"
                            ToolTipService.ToolTip="Search customers"
                            Background="Transparent"
                            BorderThickness="0">
                        <SymbolIcon Symbol="Find" />
                    </Button>
                    
                    <!-- Notifications -->
                    <Button x:Name="NotificationsButton"
                            Click="NotificationsButton_Click"
                            Style="{ThemeResource DefaultButtonStyle}"
                            ToolTipService.ToolTip="Notifications"
                            Background="Transparent"
                            BorderThickness="0">
                        <FontIcon Glyph="&#xE7E7;" />
                    </Button>
                </StackPanel>
            </Grid>
        </muxc:NavigationView.Header>
        
        <!-- ?? NAVIGATION: Main navigation menu items -->
        <muxc:NavigationView.MenuItems>
            
            <!-- ?? HOME: Customer Management Hub -->
            <muxc:NavigationViewItem x:Name="HomeNavItem"
                                     Content="Home"
                                     Tag="home"
                                     IsSelected="True"
                                     ToolTipService.ToolTip="Customer management dashboard">
                <muxc:NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Home" />
                </muxc:NavigationViewItem.Icon>
            </muxc:NavigationViewItem>
            
            <!-- ?? CUSTOMERS: Customer list and management -->
            <muxc:NavigationViewItem x:Name="CustomersNavItem"
                                     Content="Customers"
                                     Tag="customers"
                                     ToolTipService.ToolTip="View and manage all customers">
                <muxc:NavigationViewItem.Icon>
                    <SymbolIcon Symbol="People" />
                </muxc:NavigationViewItem.Icon>
            </muxc:NavigationViewItem>
            
            <!-- ?? EDIT: Customer editing forms -->
            <muxc:NavigationViewItem x:Name="EditNavItem"
                                     Content="Customer Editor"
                                     Tag="edit"
                                     ToolTipService.ToolTip="Create and edit customer information">
                <muxc:NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Edit" />
                </muxc:NavigationViewItem.Icon>
            </muxc:NavigationViewItem>
            
            <!-- ?? FILE OPERATIONS: File management and import/export -->
            <muxc:NavigationViewItem x:Name="FileOpsNavItem"
                                     Content="File Operations"
                                     Tag="fileops"
                                     ToolTipService.ToolTip="Import, export, and manage customer data files">
                <muxc:NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Folder" />
                </muxc:NavigationViewItem.Icon>
            </muxc:NavigationViewItem>
            
            <!-- ?? REPORTS: Analytics and reporting -->
            <muxc:NavigationViewItem x:Name="ReportsNavItem"
                                     Content="Reports"
                                     Tag="reports"
                                     ToolTipService.ToolTip="Customer analytics and reports">
                <muxc:NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Library" />
                </muxc:NavigationViewItem.Icon>
            </muxc:NavigationViewItem>
            
            <!-- ?? MOBILE: Mobile sync features -->
            <muxc:NavigationViewItem x:Name="MobileNavItem"
                                     Content="Mobile Sync"
                                     Tag="mobile"
                                     ToolTipService.ToolTip="Synchronize with mobile devices">
                <muxc:NavigationViewItem.Icon>
                    <SymbolIcon Symbol="CellPhone" />
                </muxc:NavigationViewItem.Icon>
            </muxc:NavigationViewItem>
        </muxc:NavigationView.MenuItems>
        
        <!-- ?? NAVIGATION: Footer items for secondary functions -->
        <muxc:NavigationView.FooterMenuItems>
            
            <!-- ?? HELP: Help and documentation -->
            <muxc:NavigationViewItem Content="Help &amp; Support"
                                     Tag="help"
                                     ToolTipService.ToolTip="Get help and view documentation">
                <muxc:NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Help" />
                </muxc:NavigationViewItem.Icon>
            </muxc:NavigationViewItem>
            
            <!-- ?? ABOUT: App information -->
            <muxc:NavigationViewItem Content="About"
                                     Tag="about"
                                     ToolTipService.ToolTip="About this application">
                <muxc:NavigationViewItem.Icon>
                    <SymbolIcon Symbol="ContactInfo" />
                </muxc:NavigationViewItem.Icon>
            </muxc:NavigationViewItem>
            
        </muxc:NavigationView.FooterMenuItems>
        
        <!-- ?? NAVIGATION: Content frame hosts all pages -->
        <Frame x:Name="ContentFrame"
               Navigated="ContentFrame_Navigated" />
        
    </muxc:NavigationView>
</Page>