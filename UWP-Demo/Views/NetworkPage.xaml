<Page
    x:Class="UWP_Demo.Views.NetworkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Demo.Views"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- NETWORK API: Dedicated page for demonstrating HTTP/API functionality - FUNCTIONALITY DISABLED -->
    <!-- Purpose: Show JSONPlaceholder API integration and internet capabilities -->
    <!-- Features: GET/POST requests, connectivity testing, data display -->

    <ScrollViewer>
        <StackPanel Margin="24" Spacing="24">
            
            <!-- NETWORK API DISABLED: Header section -->
            <StackPanel Spacing="8">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Border Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                            CornerRadius="6"
                            Width="40"
                            Height="40">
                        <SymbolIcon Symbol="Globe" 
                                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Network API Demo (DISABLED)" 
                                   FontSize="28" 
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                        <TextBlock Text="HTTP API functionality has been commented out" 
                                   FontSize="14" 
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- NETWORK API DISABLED: Info message -->
            <muxc:InfoBar Title="Network API Functionality Disabled"
                          Message="The HTTP API demonstration features have been commented out in the code. All network-related classes and methods are disabled."
                          Severity="Warning"
                          IsOpen="True"
                          IsClosable="False" />

            <!-- NETWORK API DISABLED: Disabled features section -->
            <Border Background="{ThemeResource SystemControlBackgroundListMediumBrush}"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                
                <StackPanel Spacing="16">
                    <!-- Disabled Header -->
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE894;" 
                                  FontSize="20" 
                                  Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                        <TextBlock Text="Disabled Features" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                   VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Disabled Features List -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="The following features have been commented out:" FontWeight="SemiBold" />
                        <TextBlock Text="• HttpApiService class" />
                        <TextBlock Text="• HttpLoggingService class" />
                        <TextBlock Text="• JSONPlaceholder API integration" />
                        <TextBlock Text="• HTTP GET/POST request demonstrations" />
                        <TextBlock Text="• Network connectivity testing" />
                        <TextBlock Text="• External data import functionality" />
                        <TextBlock Text="• Internet (Client) capability in manifest" />
                    </StackPanel>

                    <!-- Disabled Operation Buttons -->
                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- GET Posts Button - DISABLED -->
                        <Button x:Name="GetPostsButton"
                                Grid.Row="0" Grid.Column="0"
                                IsEnabled="False"
                                Margin="4"
                                HorizontalAlignment="Stretch"
                                Padding="16,12">
                            <StackPanel Spacing="8">
                                <SymbolIcon Symbol="Download" />
                                <TextBlock Text="GET Posts (Disabled)" FontWeight="SemiBold" />
                                <TextBlock Text="Functionality commented out" FontSize="12" Opacity="0.8" />
                            </StackPanel>
                        </Button>

                        <!-- GET Users Button - DISABLED -->
                        <Button x:Name="GetUsersButton"
                                Grid.Row="0" Grid.Column="1"
                                IsEnabled="False"
                                Margin="4"
                                HorizontalAlignment="Stretch"
                                Padding="16,12">
                            <StackPanel Spacing="8">
                                <SymbolIcon Symbol="People" />
                                <TextBlock Text="GET Users (Disabled)" FontWeight="SemiBold" />
                                <TextBlock Text="Functionality commented out" FontSize="12" Opacity="0.8" />
                            </StackPanel>
                        </Button>

                        <!-- POST Request Button - DISABLED -->
                        <Button x:Name="CreatePostButton"
                                Grid.Row="1" Grid.Column="0"
                                IsEnabled="False"
                                Margin="4"
                                HorizontalAlignment="Stretch"
                                Padding="16,12">
                            <StackPanel Spacing="8">
                                <SymbolIcon Symbol="Upload" />
                                <TextBlock Text="POST Data (Disabled)" FontWeight="SemiBold" />
                                <TextBlock Text="Functionality commented out" FontSize="12" Opacity="0.8" />
                            </StackPanel>
                        </Button>

                        <!-- Import to Customers Button - DISABLED -->
                        <Button x:Name="ImportUsersButton"
                                Grid.Row="1" Grid.Column="1"
                                IsEnabled="False"
                                Margin="4"
                                HorizontalAlignment="Stretch"
                                Padding="16,12">
                            <StackPanel Spacing="8">
                                <SymbolIcon Symbol="ContactInfo" />
                                <TextBlock Text="Import Users (Disabled)" FontWeight="SemiBold" />
                                <TextBlock Text="Functionality commented out" FontSize="12" Opacity="0.8" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- NETWORK API DISABLED: Information section -->
            <Border Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                
                <StackPanel Spacing="16">
                    <!-- Info Header -->
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE946;" 
                                  FontSize="20" 
                                  Foreground="{ThemeResource SystemControlForegroundAccentBrush}" />
                        <TextBlock Text="Code Comment Information" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                   VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Info Content -->
                    <StackPanel Spacing="12">
                        <TextBlock Text="?? Commented Code Locations:" FontWeight="SemiBold" FontSize="16" />
                        
                        <TextBlock TextWrapping="Wrap" FontSize="14">
                            <Run Text="1. Services\BasicServices.cs:" FontWeight="SemiBold" />
                            <LineBreak />
                            <Run Text="   • HttpApiService class (lines wrapped in /* ... */)" />
                            <LineBreak />
                            <Run Text="   • HttpLoggingService class (lines wrapped in /* ... */)" />
                        </TextBlock>
                        
                        <TextBlock TextWrapping="Wrap" FontSize="14">
                            <Run Text="2. Views\NetworkPage.xaml.cs:" FontWeight="SemiBold" />
                            <LineBreak />
                            <Run Text="   • All event handlers and HTTP logic commented out" />
                            <LineBreak />
                            <Run Text="   • Only stub class remains for compilation" />
                        </TextBlock>
                        
                        <TextBlock TextWrapping="Wrap" FontSize="14">
                            <Run Text="3. MainPage.xaml:" FontWeight="SemiBold" />
                            <LineBreak />
                            <Run Text="   • NetworkNavItem navigation removed from menu" />
                            <LineBreak />
                            <Run Text="   • Navigation mappings commented out" />
                        </TextBlock>
                        
                        <TextBlock TextWrapping="Wrap" FontSize="14">
                            <Run Text="4. Package.appxmanifest:" FontWeight="SemiBold" />
                            <LineBreak />
                            <Run Text="   • internetClient capability commented out" />
                        </TextBlock>

                        <Border Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" 
                                CornerRadius="4" 
                                Padding="12"
                                Margin="0,8,0,0">
                            <TextBlock TextWrapping="Wrap" 
                                       FontSize="12">
                                <Run Text="?? Note: " FontWeight="SemiBold" />
                                <Run Text="To re-enable network functionality, uncomment the marked sections in the files listed above and restore the internetClient capability in the manifest." />
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</Page>