<Page
    x:Class="UWP_Demo.Views.ReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Margin="24" Spacing="24">
            
            <!-- ?? REPORTS: Modern header -->
            <StackPanel Spacing="8">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                            CornerRadius="6"
                            Width="40"
                            Height="40">
                        <SymbolIcon Symbol="Library" 
                                    Foreground="White"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Analytics &amp; Reports" 
                                   FontSize="28" 
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                        <TextBlock Text="Customer insights and business analytics" 
                                   FontSize="14" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- ?? Coming Soon InfoBar -->
            <muxc:InfoBar Title="Feature Coming Soon"
                          Message="Advanced reporting and analytics features are being developed. This will include customer growth charts, geographic distribution, and business insights."
                          Severity="Informational"
                          IsOpen="True"
                          IsClosable="False">
                <muxc:InfoBar.IconSource>
                    <muxc:SymbolIconSource Symbol="Library" />
                </muxc:InfoBar.IconSource>
            </muxc:InfoBar>

            <!-- ?? Placeholder content -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                
                <StackPanel Spacing="16">
                    <TextBlock Text="?? Future Reports Include:" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                    
                    <StackPanel Spacing="8">
                        <TextBlock Text="?? Customer Growth Analytics" FontSize="14" />
                        <TextBlock Text="?? Geographic Distribution Maps" FontSize="14" />
                        <TextBlock Text="?? Revenue and Business Insights" FontSize="14" />
                        <TextBlock Text="?? Mobile Usage Statistics" FontSize="14" />
                        <TextBlock Text="?? Email Campaign Performance" FontSize="14" />
                        <TextBlock Text="? Customer Engagement Trends" FontSize="14" />
                    </StackPanel>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</Page>