<Page
    x:Class="UWP_Demo.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Demo.Views"
    xmlns:viewmodels="using:UWP_Demo.ViewModels"
    xmlns:models="using:UWP_Demo.Models"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!--
    HomePage displays the customer list and provides basic customer management functionality.
    This page demonstrates:
    - ListView with data binding to ObservableCollection
    - Search and filtering functionality
    - Command binding for user actions
    - Responsive design with adaptive layouts
    - Empty state handling
    - Loading states and progress indication
    - Context menus and selection handling
    -->

    <Page.DataContext>
        <viewmodels:HomeViewModel />
    </Page.DataContext>

    <Grid Margin="{StaticResource LargePadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="{StaticResource MediumMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Title and Summary -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="{Binding Title}" 
                          Style="{StaticResource HeaderTextStyle}" 
                          Margin="0" />
                <TextBlock Text="{Binding CustomerSummary}" 
                          Style="{StaticResource CaptionTextStyle}" 
                          Margin="0,4,0,0" />
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       Spacing="8" 
                       VerticalAlignment="Center">
                
                <!-- Add Customer Button -->
                <Button Content="Add Customer"
                       Command="{Binding AddCustomerCommand}"
                       Style="{StaticResource PrimaryButtonStyle}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;" FontSize="16" />
                            <TextBlock Text="Add Customer" />
                        </StackPanel>
                    </Button.Content>
                </Button>

                <!-- Refresh Button -->
                <Button Command="{Binding RefreshCommand}"
                       Style="{StaticResource SecondaryButtonStyle}"
                       ToolTipService.ToolTip="Refresh customer list">
                    <FontIcon Glyph="&#xE72C;" FontSize="16" />
                </Button>

                <!-- Load External Data Button -->
                <Button Command="{Binding LoadExternalDataCommand}"
                       Style="{StaticResource SecondaryButtonStyle}"
                       ToolTipService.ToolTip="Load sample data from API">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xE774;" FontSize="14" />
                        <TextBlock Text="Import" FontSize="12" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Search and Filter Section -->
        <Border Grid.Row="1" 
               Style="{StaticResource CardStyle}" 
               Margin="{StaticResource MediumMargin}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <TextBox Grid.Column="0" 
                        Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        PlaceholderText="Search customers by name, email, or company..."
                        Style="{StaticResource FormTextBoxStyle}"
                        Margin="0">
                    <TextBox.Resources>
                        <Style TargetType="TextBox" BasedOn="{StaticResource FormTextBoxStyle}">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Background" Value="Transparent" />
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Search Icon -->
                <FontIcon Grid.Column="1" 
                         Glyph="&#xE721;" 
                         FontSize="16" 
                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                         Margin="8,0" 
                         VerticalAlignment="Center" />

                <!-- Clear Search Button -->
                <Button Grid.Column="2" 
                       Command="{Binding ClearSearchCommand}"
                       Style="{StaticResource SecondaryButtonStyle}"
                       Padding="8"
                       Margin="4,0,0,0"
                       ToolTipService.ToolTip="Clear search">
                    <FontIcon Glyph="&#xE711;" FontSize="12" />
                </Button>
            </Grid>
        </Border>

        <!-- Customer List Section -->
        <Grid Grid.Row="2" Margin="{StaticResource MediumMargin}">
            
            <!-- Customer List (when customers exist) -->
            <ListView x:Name="CustomerListView" 
                     ItemsSource="{Binding FilteredCustomers}"
                     SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                     SelectionMode="Single"
                     IsItemClickEnabled="True"
                     Visibility="{Binding HasCustomers, Converter={StaticResource BoolToVisibilityConverter}}"
                     Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                     BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                     BorderThickness="1"
                     CornerRadius="{StaticResource MediumCornerRadius}"
                     Padding="8">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Customer">
                        <Grid Padding="{StaticResource MediumPadding}" 
                             Background="Transparent"
                             CornerRadius="{StaticResource SmallCornerRadius}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Avatar/Initial -->
                            <Border Grid.Column="0" 
                                   Width="48" 
                                   Height="48" 
                                   Background="{StaticResource PrimaryAccentBrush}"
                                   CornerRadius="24"
                                   VerticalAlignment="Top"
                                   Margin="0,0,12,0">
                                <TextBlock Text="{x:Bind FirstName, Converter={StaticResource FirstCharConverter}}"
                                          Foreground="White"
                                          FontWeight="SemiBold"
                                          FontSize="20"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                            </Border>

                            <!-- Customer Information -->
                            <StackPanel Grid.Column="1" 
                                       VerticalAlignment="Center"
                                       Spacing="4">
                                
                                <!-- Name -->
                                <TextBlock Text="{x:Bind FullName}" 
                                          Style="{StaticResource SubtitleTextStyle}"
                                          Margin="0" />
                                
                                <!-- Email -->
                                <TextBlock Text="{x:Bind Email}" 
                                          Style="{StaticResource CaptionTextStyle}"
                                          Margin="0" />
                                
                                <!-- Company and Phone -->
                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <TextBlock Text="{x:Bind Company}" 
                                              Style="{StaticResource CaptionTextStyle}"
                                              Margin="0"
                                              Visibility="{x:Bind Company, Converter={StaticResource StringToVisibilityConverter}}" />
                                    <TextBlock Text="{x:Bind Phone}" 
                                              Style="{StaticResource CaptionTextStyle}"
                                              Margin="0"
                                              Visibility="{x:Bind Phone, Converter={StaticResource StringToVisibilityConverter}}" />
                                </StackPanel>
                            </StackPanel>

                            <!-- Action Menu -->
                            <StackPanel Grid.Column="2" 
                                       Orientation="Horizontal" 
                                       Spacing="4"
                                       VerticalAlignment="Center">
                                
                                <!-- Edit Button -->
                                <Button Command="{Binding DataContext.EditSelectedCustomerCommand, ElementName=CustomerListView}"
                                       CommandParameter="{x:Bind}"
                                       Style="{StaticResource SecondaryButtonStyle}"
                                       Padding="8"
                                       ToolTipService.ToolTip="Edit customer">
                                    <FontIcon Glyph="&#xE70F;" FontSize="14" />
                                </Button>

                                <!-- Delete Button -->
                                <Button Command="{Binding DataContext.DeleteSelectedCustomerCommand, ElementName=CustomerListView}"
                                       CommandParameter="{x:Bind}"
                                       Style="{StaticResource SecondaryButtonStyle}"
                                       Padding="8"
                                       ToolTipService.ToolTip="Delete customer">
                                    <FontIcon Glyph="&#xE74D;" FontSize="14" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <!-- Context Menu for List Items -->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Margin" Value="0,0,0,1" />
                        <Setter Property="ContextFlyout">
                            <Setter.Value>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Edit Customer" 
                                                   Icon="Edit"
                                                   Command="{Binding DataContext.EditSelectedCustomerCommand, ElementName=CustomerListView}" />
                                    <MenuFlyoutItem Text="Delete Customer" 
                                                   Icon="Delete"
                                                   Command="{Binding DataContext.DeleteSelectedCustomerCommand, ElementName=CustomerListView}" />
                                </MenuFlyout>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <!-- Empty State (when no customers exist) -->
            <StackPanel VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Spacing="16"
                       Visibility="{Binding HasCustomers, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                
                <!-- Empty State Icon -->
                <FontIcon Glyph="&#xE716;" 
                         FontSize="48" 
                         Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                
                <!-- Empty State Text -->
                <TextBlock Text="No customers found" 
                          Style="{StaticResource SubtitleTextStyle}"
                          HorizontalAlignment="Center" />
                
                <TextBlock Text="Add your first customer or import sample data to get started." 
                          Style="{StaticResource BodyTextStyle}"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"
                          MaxWidth="300" />

                <!-- Empty State Actions -->
                <StackPanel Orientation="Horizontal" 
                           Spacing="12" 
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0">
                    <Button Content="Add Customer" 
                           Command="{Binding AddCustomerCommand}"
                           Style="{StaticResource PrimaryButtonStyle}" />
                    <Button Content="Import Sample Data" 
                           Command="{Binding LoadExternalDataCommand}"
                           Style="{StaticResource SecondaryButtonStyle}" />
                </StackPanel>
            </StackPanel>

            <!-- No Search Results (when search is active but no results) -->
            <StackPanel VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Spacing="16"
                       Visibility="{Binding IsSearchActive, Converter={StaticResource BoolToVisibilityConverter}}">
                
                <FontIcon Glyph="&#xE721;" 
                         FontSize="32" 
                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                         Visibility="{Binding FilteredCustomerCount, Converter={StaticResource ZeroToVisibilityConverter}}" />
                
                <TextBlock Text="No customers match your search" 
                          Style="{StaticResource SubtitleTextStyle}"
                          HorizontalAlignment="Center"
                          Visibility="{Binding FilteredCustomerCount, Converter={StaticResource ZeroToVisibilityConverter}}" />
                
                <Button Content="Clear Search" 
                       Command="{Binding ClearSearchCommand}"
                       Style="{StaticResource SecondaryButtonStyle}"
                       Visibility="{Binding FilteredCustomerCount, Converter={StaticResource ZeroToVisibilityConverter}}" />
            </StackPanel>
        </Grid>

        <!-- Status and Loading Section -->
        <Grid Grid.Row="3" Margin="{StaticResource MediumMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Status Information -->
            <StackPanel Grid.Column="0" 
                       Orientation="Horizontal" 
                       Spacing="16" 
                       VerticalAlignment="Center">
                
                <!-- Customer Count -->
                <TextBlock Style="{StaticResource CaptionTextStyle}" Margin="0">
                    <Run Text="Showing" />
                    <Run Text="{Binding FilteredCustomerCount}" FontWeight="SemiBold" />
                    <Run Text="of" />
                    <Run Text="{Binding Customers.Count}" FontWeight="SemiBold" />
                    <Run Text="customers" />
                </TextBlock>

                <!-- Search Status -->
                <TextBlock Text="(filtered)" 
                          Style="{StaticResource CaptionTextStyle}"
                          Margin="0"
                          Visibility="{Binding IsSearchActive, Converter={StaticResource BoolToVisibilityConverter}}" />
            </StackPanel>

            <!-- Loading and Action Indicators -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       Spacing="8" 
                       VerticalAlignment="Center">
                
                <!-- Refresh Loading -->
                <ProgressRing IsActive="{Binding IsRefreshing}"
                             Width="16" 
                             Height="16"
                             Visibility="{Binding IsRefreshing, Converter={StaticResource BoolToVisibilityConverter}}" />
                
                <!-- External Data Loading -->
                <StackPanel Orientation="Horizontal" 
                           Spacing="4"
                           Visibility="{Binding IsLoadingExternalData, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressRing IsActive="True" Width="16" Height="16" />
                    <TextBlock Text="Loading external data..." 
                              Style="{StaticResource CaptionTextStyle}" 
                              Margin="0" />
                </StackPanel>

                <!-- Export Button -->
                <Button Command="{Binding ExportDataCommand}"
                       Style="{StaticResource SecondaryButtonStyle}"
                       Padding="8"
                       ToolTipService.ToolTip="Export customer data"
                       Visibility="{Binding HasCustomers, Converter={StaticResource BoolToVisibilityConverter}}">
                    <FontIcon Glyph="&#xE78C;" FontSize="14" />
                </Button>
            </StackPanel>
        </Grid>

        <!-- Error/Status Notification -->
        <muxc:InfoBar x:Name="StatusInfoBar"
                     Grid.Row="0"
                     Grid.RowSpan="4"
                     IsOpen="{Binding HasError}"
                     Severity="Error"
                     Title="Error"
                     Message="{Binding ErrorMessage}"
                     IsClosable="True"
                     VerticalAlignment="Top"
                     Margin="0,8,0,0" />
    </Grid>
</Page>