<Page
    x:Class="UWP_Demo.Views.HelpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Margin="24" Spacing="24">
            
            <!-- ?? HELP: Modern header -->
            <StackPanel Spacing="8">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                            CornerRadius="6"
                            Width="40"
                            Height="40">
                        <SymbolIcon Symbol="Help" 
                                    Foreground="White"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Help &amp; Support" 
                                   FontSize="28" 
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                        <TextBlock Text="Get help using Customer Management features" 
                                   FontSize="14" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- ?? Quick Help InfoBar -->
            <muxc:InfoBar Title="Getting Started"
                          Message="Welcome to Customer Management! Use the navigation menu to explore different features and manage your customer data efficiently."
                          Severity="Success"
                          IsOpen="True"
                          IsClosable="True">
                <muxc:InfoBar.IconSource>
                    <muxc:SymbolIconSource Symbol="Help" />
                </muxc:InfoBar.IconSource>
            </muxc:InfoBar>

            <!-- ?? Help Topics -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                
                <StackPanel Spacing="20">
                    <TextBlock Text="?? Help Topics" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                    
                    <!-- Help topic buttons -->
                    <StackPanel Spacing="12">
                        <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <SymbolIcon Symbol="People" />
                                <StackPanel>
                                    <TextBlock Text="Managing Customers" FontWeight="SemiBold" />
                                    <TextBlock Text="Learn how to add, edit, and organize customer information" FontSize="12" Opacity="0.7" />
                                </StackPanel>
                            </StackPanel>
                        </Button>
                        
                        <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <SymbolIcon Symbol="Folder" />
                                <StackPanel>
                                    <TextBlock Text="File Operations" FontWeight="SemiBold" />
                                    <TextBlock Text="Import, export, and backup your customer data" FontSize="12" Opacity="0.7" />
                                </StackPanel>
                            </StackPanel>
                        </Button>
                        
                        <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <SymbolIcon Symbol="Setting" />
                                <StackPanel>
                                    <TextBlock Text="App Settings" FontWeight="SemiBold" />
                                    <TextBlock Text="Customize themes, notifications, and preferences" FontSize="12" Opacity="0.7" />
                                </StackPanel>
                            </StackPanel>
                        </Button>
                        
                        <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <SymbolIcon Symbol="Sync" />
                                <StackPanel>
                                    <TextBlock Text="State Management" FontWeight="SemiBold" />
                                    <TextBlock Text="Understanding how your work is saved automatically" FontSize="12" Opacity="0.7" />
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ?? Support Contact -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                
                <StackPanel Spacing="16">
                    <TextBlock Text="?? Need More Help?" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                    
                    <TextBlock Text="If you can't find what you're looking for, our support team is here to help!"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12" />
                    
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Style="{ThemeResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <SymbolIcon Symbol="Mail" />
                                <TextBlock Text="Contact Support" />
                            </StackPanel>
                        </Button>
                        
                        <Button>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <SymbolIcon Symbol="Globe" />
                                <TextBlock Text="Online Documentation" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</Page>