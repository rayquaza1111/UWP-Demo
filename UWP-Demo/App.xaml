<Application
    x:Class="UWP_Demo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Demo"
    xmlns:converters="using:UWP_Demo.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- ?? WINUI 2 UI ENHANCEMENT: Add WinUI 2 resources for modern controls -->
                <!-- ?? Package: Microsoft.UI.Xaml version 2.8.6 provides these enhanced controls -->
                <!-- ? Benefits: Modern Windows 11 styling, better accessibility, enhanced user experience -->
                <!-- ?? Enables: NavigationView, InfoBar, and other WinUI 2 controls throughout the app -->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Basic converters -->
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:FirstCharConverter x:Key="FirstCharConverter" />
            
            <!-- Basic styles -->
            <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>